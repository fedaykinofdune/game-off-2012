#!/bin/bash

call_dir=$(pwd)
root_dir=$(dirname $(dirname ${0}))

cd ${root_dir}

install -m 764 bin/pre-commit .git/hooks

git submodule update --init --recursive
sub/stimpackjs/bin/build

npm install

cd sub/zepto
bundle
rake concat[-polyfill:-detect:-fx:-ajax:-form] dist
cd -

coffee -c grunt.coffee
grunt

cd ${call_dir}
